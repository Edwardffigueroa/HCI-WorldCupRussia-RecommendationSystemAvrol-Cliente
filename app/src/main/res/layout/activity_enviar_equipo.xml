<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="papplet.hellfish.avrol.MainActivity">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/sp_paises_U"
        android:layout_marginEnd="11dp"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_paises_C"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/sp_paises_T"
        android:layout_alignStart="@+id/sp_paises_T" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_paises_D"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/sp_paises_U"
        android:layout_alignStart="@+id/sp_paises_U" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_paises_T"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/sp_paises_D"
        android:layout_alignStart="@+id/sp_paises_D" />

    <TextView
        android:text="Equipo Dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sp_paises_D"
        android:layout_alignParentStart="true"
        android:id="@+id/teamD" />

    <TextView
        android:text="Equipo uno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teamU"
        android:layout_alignTop="@+id/sp_paises_U"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Equipo Tres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sp_paises_T"
        android:layout_alignParentStart="true"
        android:id="@+id/teamT" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sp_paises_C"
        android:layout_alignParentStart="true"
        android:id="@+id/teamC" />

    <Button
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:id="@+id/enviar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>